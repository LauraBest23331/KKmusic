/* pages/index/index.wxss */
page {
  background-color: #f2f2f2;
  height: 550%;
}
.swiper-top {
  height: 480rpx;
}
.swiper-top swiper-item image {
  width: 100%;
  height: 480rpx;
}
.navbar {
  height: 200rpx; 
  box-shadow: 1px 2px 3px #dddddd;
  display: flex;
  justify-content:  space-around;
  align-items: center;
  background-color: #fff;
}
.navbar view {
  height: 150rpx;
  width: 150rpx;
  /* border: 1px solid saddlebrown; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.navbar view image {
  height: 100rpx;
  width: 100rpx;
}
.navbar view text {
  font-size: 28rpx;
}
.movable-container {
  margin-top: 40rpx;
  padding: 0px 20rpx;
  box-sizing: border-box;
  box-shadow: 1px 2px 3px #d9d9d9;
  background-color: #fff;
  height: 500rpx;
}
.first-movable-area {
  height: 400rpx;
  width: 100%;
  
}

.title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.title>text:first-child {
  border-left: 4rpx solid #1995da;
  font-size: 38rpx;
  padding-left: 10rpx;
}
.title>text:last-child {
  font-size: 32rpx;
}
.first-movable-area movable-view image {
  height: 300rpx;
  border-radius: 10rpx;
  width: 640rpx;
}
.first-movable-area movable-view {
  width: 2700rpx;
  height: 300rpx;
  display: flex;
  
}
.first-movable-area movable-view>view {
  margin-right: 20rpx;
}
.first-movable-area movable-view view:first-child {
  font-size: 36rpx;
}
.first-movable-area movable-view view view:last-child {
  font-size: 24rpx;
  color: #666;
}
